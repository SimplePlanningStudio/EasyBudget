<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/easy_budget_green"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/notification_bell" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/onboarding_screen_push_permission_title"
            android:textColor="#ED9F39"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="20dp"
            android:text="@string/onboarding_screen_push_permission_message"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/_22sdp"
            android:text="@string/onboarding_screen_push_permission_only_essential"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/_22sdp"
            android:text="@string/onboarding_screen_push_permission_no_spam"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-65dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/onboarding_screen_push_permission_refuse_button"
            style="@style/BlueButton"
            android:layout_width="@dimen/_99sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@drawable/ic_small_button_red"
            android:maxLines="1"
            android:text="@string/onboarding_screen_push_permission_not_now_cta"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/onboarding_screen_push_permission_accept_button"
            style="@style/BlueButton"
            android:layout_width="@dimen/_99sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@drawable/ic_small_button_green"
            android:maxLines="1"
            android:text="@string/setting_notification_permission_rejected_dialog_accept_cta"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

</RelativeLayout>
